{
    "variables": {
        "vm_name": "win2016tmpl-{{timestamp}}"
    },
    "builders": [{
        "type": "vmware-iso",
        "output_directory": "{{user `vm_name`}}",
        "vm_name": "{{user `vm_name`}}",
        "version": "13",
        "communicator": "winrm",
        "winrm_username": "{{user `winrm_name`}}",
        "winrm_password": "{{user `winrm_pass`}}",
        "winrm_timeout": "12h",
        "shutdown_timeout": "30m",
        "keep_registered": true,
        "vnc_disable_password": true,
        "vnc_port_min": "5900",
        "vnc_port_max": "5911",
        "vnc_bind_address": "0.0.0.0",
        "remote_type": "esx5",
        "remote_host": "{{user `esxi_host`}}",
        "remote_username": "{{user `esxi_user`}}",
        "remote_password": "{{user `esxi_pass`}}",
        "remote_datastore": "{{user `datastore`}}",
        "remote_cache_datastore": "{{user `datastore`}}",
        "remote_cache_directory": "packer-cache",
        "iso_url": "{{user `iso_url`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
        "iso_checksum_type": "none",
        "shutdown_command": "C:/Windows/packer/PackerShutdown.bat",
        "guest_os_type": "windows9srv-64",
        "disk_size" : "{{user `disk`}}",
        "disk_type_id": "thin",
        "http_directory" : "http",
        "http_port_min" : 9010,
        "http_port_max" : 9020,
        "boot_wait": "2m",
        "floppy_files": [
            "answer_files/win2016/Autounattend.xml",
            "scripts/winrm.ps1"
        ],
        "vmx_data": {
          "memsize": "{{user `memory`}}",
          "numvcpus": "{{user `cpus`}}",
          "scsi0.virtualDev": "lsisas1068",
          "ethernet0.virtualDev": "e1000e",
          "ethernet0.dvs.portgroupid": "{{user `dvportgroupid`}}",
          "ethernet0.dvs.switchid": "{{user `switchid`}}"
        }
    }],
    "provisioners": [
      {
        "type":  "ansible",
        "playbook_file": "ansible/win2016std.yml",
        "groups": ["windows"],
        "extra_arguments": [
          "--connection", "packer",
          "--extra-vars", "ansible_shell_type=powershell ansible_shell_executable=None"
        ]
      },
      {
        "type": "powershell",
        "script": "scripts/save_shutdown_command.ps1"
      },
      {
        "type": "file",
        "source": "scripts/winrm_ansible.ps1",
        "destination": "C:/Windows/packer/winrm_ansible.ps1"
      }
    ],
    "post-processors": [{
      "type": "vsphere-template",
      "host": "vcsa01.tstdmn.dk",
      "insecure": true,
      "username": "administrator@vsphere.local",
      "password": "{{user `vc_pass`}}",
      "datacenter": "Datacenter",
      "folder": "/Templates"
    }]
}
